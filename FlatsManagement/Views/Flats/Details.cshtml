@model FlatsManagement.Models.Flats

@{
    ViewBag.Title = "Details";
}

<div class="jumbotron">
    <h1>Flat Details</h1>
</div>

<div class="col-md-12">
    <h4>Flat ID: @Html.DisplayFor(model => model.f_id)</h4>
    <hr />
    <div>
        
        <div class="col-md-6">
            <img src="@Model.f_image" height="500" width="500" />
        </div>
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.f_type)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.f_type)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.f_location)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.f_location)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.f_status)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.f_status)
                </dd>
            </dl>
            <table align="center">
                <tr>
                    <td>
                        <img src="~/Images/Icons/room-02.svg" height="30" width="30" />
                    </td>

                    <td>   @Html.DisplayFor(model => model.f_rooms)</td>

                    <td>
                        <img src="~/Images/Icons/bath-02.svg" height="30" width="30" />
                    </td>


                    <td>   @Html.DisplayFor(model => model.f_baths)</td>
                </tr>

                <tr>
                    <td>
                        <img src="~/Images/Icons/hall-02.svg" height="30" width="30" />
                    </td>

                    <td>   @Html.DisplayFor(model => model.f_hall)</td>

                    <td>
                        <img src="~/Images/Icons/kitch-02.svg" height="30" width="30" />
                    </td>

                    <td>   @Html.DisplayFor(model => model.f_kitchens)</td>
                </tr>
            </table>
        </div>
    </div>
    <p align="center">
        @Html.ActionLink("Assign", "AddCustomer", "Customers", new { f_id = Model.f_id }, null) |
        @Html.ActionLink("Edit", "Edit", new { id = Model.f_id }) |
        @Html.ActionLink("Back to List", null, null, null, new { href = Request.UrlReferrer })
    </p>
</div>